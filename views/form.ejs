<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Provider Creation Request | Plutto</title>
  
  <!-- Favicon (use .ico or .png as desired) -->
  <link rel="icon" href="/images/plutto-icon.png" type="image/png">
  
  <!-- Google Fonts (Nunito Sans) -->
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">

  <!-- Custom CSS (our new stylesheet) -->
  <link rel="stylesheet" href="/css/form-style.css">
</head>
<body>
  <div class="container">
    <!-- Transparent Plutto Logo -->
    <img 
      src="../images/plutto-logo.png" 
      alt="Plutto Logo" 
      class="plutto-logo"
    >
    <h2 class="header-text">
      <i class="fas fa-building"></i> Create a Provider
    </h2>

    <!-- Add the 'novalidate' attribute and Bootstrap's 'was-validated' class via JS on submit -->
    <form action="/submit" method="POST" id="providerForm" novalidate>
      <!-- Access Key -->
      <div class="mb-3">
        <label for="accessKey" class="form-label">Access Key</label>
        <input 
          type="text" 
          id="accessKey" 
          name="accessKey" 
          class="form-control" 
          required
          placeholder="mySecretKey123"
        >
        <div class="invalid-feedback">
          Please enter a valid access key.
        </div>
      </div>
  
      <!-- TIN (Tax ID) -->
      <div class="mb-3">
        <label for="providerTin" class="form-label">TIN (Tax ID)</label>
        <input 
          type="text" 
          id="providerTin" 
          name="providerTin" 
          class="form-control"
          placeholder="12345678-9"
          required
          pattern="^\d{7,8}-\d$"
        >
        <div class="invalid-feedback">
          Please enter a valid TIN in the format 12345678-9.
        </div>
      </div>
  
      <!-- Provider Name (letters and spaces only) -->
      <div class="mb-3">
        <label for="providerName" class="form-label">Provider Name</label>
        <input 
          type="text" 
          id="providerName" 
          name="providerName" 
          class="form-control"
          placeholder="John Doe"
          required
          pattern="^[A-Za-z\s]+$"
        >
        <div class="invalid-feedback">
          Name must contain only letters and spaces.
        </div>
      </div>
  
      <!-- Provider Email (optional) -->
      <div class="mb-3">
        <label for="providerEmail" class="form-label">Provider Email (optional)</label>
        <input 
          type="email" 
          id="providerEmail" 
          name="providerEmail" 
          class="form-control"
          placeholder="user@example.com"
        >
        <div class="invalid-feedback">
          Please enter a valid email address.
        </div>
      </div>

      <!-- Provider URL (optional) -->
      <div class="mb-3">
        <label for="providerUrl" class="form-label">Provider Website (optional)</label>
        <input
          type="url"
          id="providerUrl"
          name="providerUrl"
          class="form-control"
          placeholder="https://www.provider.com"
        >
        <div class="invalid-feedback">
          Please enter a valid URL (e.g. https://example.com).
        </div>
      </div>
  
      <!-- Details (optional) -->
      <div class="mb-3">
        <label for="providerDetails" class="form-label">Details (optional)</label>
        <textarea 
          id="providerDetails" 
          name="providerDetails" 
          class="form-control"
          placeholder="Additional information about the provider..."
        ></textarea>
      </div>
  
      <button type="submit" class="btn btn-primary w-100">
        Submit Request
      </button>
    </form>
  </div>
  
  <!-- Bootstrap Bundle JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Optional JavaScript to enable Bootstrap validation styles -->
  <script>
    (function() {
      const form = document.getElementById('providerForm');
      form.addEventListener('submit', function(event) {
        // Trigger HTML5 validation
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    })();
  </script>
</body>
</html>